<div id="AddressNewForm" class="hide address-form">
  {% form 'customer_address', customer.new_address %}
  <h2 class="account__subtitle">{{ 'customer.addresses.add_new' | t }}</h2>

  <label class="address__label" for="AddressFirstNameNew">
    {{ 'customer.addresses.first_name' | t }}
  </label>
  <input type="text"
         name="address[first_name]"
         class="address__input"
         id="AddressFirstNameNew"
         value="{{ form.first_name }}"
         autocapitalize="words">

  <label class="address__label" for="AddressLastNameNew">
    {{ 'customer.addresses.last_name' | t }}
  </label>
  <input type="text"
         name="address[last_name]"
         class="address__input"
         id="AddressLastNameNew"
         value="{{ form.last_name }}"
         autocapitalize="words">

  <label class="address__label" for="AddressCompanyNew">
    {{ 'customer.addresses.company' | t }}
  </label>
  <input type="text"
         name="address[company]"
         class="address__input"
         id="AddressCompanyNew"
         value="{{ form.company }}"
         autocapitalize="words">

  <label class="address__label" for="AddressAddress1New">
    {{ 'customer.addresses.address1' | t }}
  </label>
  <input type="text"
         name="address[address1]"
         class="address__input"
         id="AddressAddress1New"
         value="{{ form.address1 }}"
         autocapitalize="words">

  <label class="address__label" for="AddressAddress2New">
    {{ 'customer.addresses.address2' | t }}
  </label>
  <input type="text"
         name="address[address2]"
         class="address__input"
         id="AddressAddress2New"
         value="{{ form.address2 }}"
         autocapitalize="words">

  <label class="address__label" for="AddressCityNew">
    {{ 'customer.addresses.city' | t }}
  </label>
  <input type="text"
         name="address[city]"
         class="address__input"
         id="AddressCityNew"
         value="{{ form.city }}"
         autocapitalize="words">

  <label class="address__label" for="AddressCountryNew">
    {{ 'customer.addresses.country' | t }}
  </label>
  <select
    name="address[country]"
    class="address__input"
    id="AddressCountryNew"
    data-default="{{ form.country }}">
    {{ country_option_tags }}
  </select>

  <div id="AddressProvinceContainerNew" style="display: none">
    <label class="address__label" for="AddressProvinceNew">
      {{ 'customer.addresses.province' | t }}
    </label>
    <select
      name="address[province]"
      class="address__input"
      id="AddressProvinceNew"
      data-default="{{ form.province }}">
    </select>
  </div>

  <label class="address__label" for="AddressZipNew">
    {{ 'customer.addresses.zip' | t }}
  </label>
  <input type="text"
         name="address[zip]"
         class="address__input"
         id="AddressZipNew"
         value="{{ form.zip }}"
         autocapitalize="characters">

  <label class="address__label" for="AddressPhoneNew">
    {{ 'customer.addresses.phone' | t }}
  </label>
  <input type="tel"
         name="address[phone]"
         class="address__input"
         id="AddressPhoneNew"
         value="{{ form.phone }}"
         pattern="[0-9\-]*">

  {{ form.set_as_default_checkbox }}
  <label class="address__label" for="address_default_address_new">
    {{ 'customer.addresses.set_default' | t }}
  </label>

  <input type="submit" class="btn button--submit" value="{{ 'customer.addresses.add' | t }}">
  <button type="button" class="address-new-toggle button--secondary">
    {{ 'customer.addresses.cancel' | t }}
  </button>

  {% endform %}

</div>
