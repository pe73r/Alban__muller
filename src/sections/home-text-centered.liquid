<style>
  @media screen and (max-width: 800px) {
   #section--{{ section.id }} .home-text__height{
     height: 30vh;
  }
</style>
{%- capture class_desktop -%}
   {{ section.settings.banner_desktop_height }}
{%- endcapture -%}
<a name="home-text">
  <section id="section--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="text-centered">
     <div class="container-small">
       <div class="home-text__height relative {{ class_desktop }}">
         <div class="home-text__box">
           <div class="home-text__content monserrat-light">{{ section.settings.text }}</div>
         </div>
      </div>
    </div>
  </section>
</a>
 {% schema %}
 {
   "name": "Home-text",
   "settings": [
       {
          "type": "select",
          "id": "banner_desktop_height",
          "label": "Slider height on desktop",
          "options": [
            {
             "value": "height--50vh",
             "label": "50%"
            },
            {
             "value": "height--60vh",
             "label": "60%"
            },
            {
             "value": "height--70vh",
             "label": "70%"
            },
            {
             "value": "height--80vh",
             "label": "80%"
            },
            {
             "value": "height--90vh",
             "label": "90%"
            },
            {
             "value": "height--100vh",
             "label": "Full screen"
            }
          ],
          "default": "height--60vh"
        },
       {
         "type": "richtext",
         "id": "text",
         "label": "text",
         "default": "<p>La vie est précieuse, soyez exigeante avec vos soins de beauté</p>"
       }

   ],
   "presets": [
       {
         "name": "Home Text",
         "category": "Homepage"
       }
     ]
 }
 {% endschema %}
