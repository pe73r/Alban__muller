<style>
 #section-{{ section.id }} .section-home-banner{
  --container-background-color: {{ section.settings.color }};
 }
 @media screen and (max-width: 800px) {
  #section-{{ section.id }} .section-home-banner{
   background-color: #fff;
  }
  }
</style>
<a name="banner">
<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="home-banner">
 <div class="section-home-banner">
   <div class="container-banner relative">
      <div class="grid grid--flush grid--middle {% unless section.settings.block-reverse %} grid--rev {% endunless %}">
        <div class="2/3--desk 1/2--lap grid__cell">
          <div class="home-banner__image">
            <div class="{% if section.settings.image-mobile != blank %} desktop-only {% endif %}">
              {% render 'image' with img:section.settings.image, class: 'full-width '  %}
            </div>
            {% if section.settings.image-mobile != blank %}
             {% render 'image' with img:section.settings.image-mobile, class: 'full-width mobile-only'  %}
            {% endif %}
          </div>
        </div>
        <div class="1/3--desk 1/2--lap grid__cell">
           <div class="home-banner__content">
             <div class="home-banner__logo">
               {% render 'image' with img:section.settings.logo, class: 'full-width'  %}
             </div>
             <div class="home-banner__title monserrat-bold">
               {% if section.settings.title-tag == 'h1' %}
                <h1>
                 {% elsif section.settings.title-tag == 'h2' %}
                <h2>
                 {% else %}
                <div>
                 {% endif %}
                  {{ section.settings.title}}
                {% if section.settings.title-tag == 'h1' %}
                </h1>
                {% elsif section.settings.title-tag == 'h2' %}
                </h2>
                {% else %}
                </div>
                {% endif %}
             </div>
             <div class="home-banner__text">{{ section.settings.text}}
             </div>
           </div>
        </div>
      </div>
      {% if section.settings.scroll_bottom_label != blank %}
        <a href="#home-text">
          <div class="home-banner__scroll desktop-only">
            <div class="relative">
              <div class="scroll__text">
                <span class="mukta">{{ section.settings.scroll_bottom_label }}</span>
                  {%- render 'arrow-down' -%}
                </div> 
              </div>
          </div>
        </a>
      {% endif %}
    </div>
  </div>
</section>
</a>
{% schema %}
{
  "name": "Home-Banner",
  "settings": [
       {
         "type": "color",
         "id": "color",
         "label": "color",
         "default": "#e1eee7"
       },
       {
         "type": "image_picker",
         "id": "image",
         "label": "image"
       },
       {
         "type": "image_picker",
         "id": "image-mobile",
         "label": "label"
       },
       {
         "type": "image_picker",
         "id": "logo",
         "label": "logo"
       },
      {
        "type": "text",
        "id": "title",
        "label": "title",
        "default": "Nouveautes"
      },
      {
        "type": "select",
        "id": "title-tag",
        "label": "Title tag type",
        "options": [
            {
                "value": "h1",
                "label": "H1"
            },
            {
                "value": "h2",
                "label": "H2"
            },
            {
                "value": "div",
                "label": "Div"
            }
        ],
        "default": "h1"
      },
      {
        "type": "text",
        "id": "text",
        "label": "text",
        "default": "<p>La nouvelle collection de soins naturels de beauté Alban Muller est à cueillir dès maintenant</p>"
      },
      {
        "type": "text",
        "id": "scroll_bottom_label",
        "label": "Scroll button text",
        "default": "Down",
        "info": "If not set or empty, the button will not be displayed"
      },
      {
          "type": "checkbox",
          "id": "block-reverse",
          "label": "Block reverse",
          "default": false,
  		    "info": "Change the side of the blocks"
      }
  ],
  "presets": [
      {
        "name": "Home Banner",
        "category": "Homepage"
      }
    ]
}
{% endschema %}
