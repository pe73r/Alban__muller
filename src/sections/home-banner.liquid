<style>
  #section-{{ section.id }} .section-home-banner{
     background-color: {{ section.settings.color }};
   }
   @media screen and (max-width: 800px) {
     #section-{{ section.id }} .section-home-banner{
        background-color: #fff;
      }
   }
</style>
<a name="banner">
<section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="home-banner">
 <div class="section-home-banner">
   <div class="container-banner relative">
      <div class="grid grid--flush grid--middle grid--rev">
        <div class="2/3--desk 1/2--lap grid__cell">
          <div class="home-banner__image">
            <div class="{% if section.settings.image-mobile != blank %} desktop-only {% endif %}">
              {% include 'image' with img:section.settings.image, class: 'full-width '  %}
            </div>
            {% if section.settings.image-mobile != blank %}
             {% include 'image' with img:section.settings.image-mobile, class: 'full-width mobile-only'  %}
            {% endif %}
          </div>
        </div>
        <div class="1/3--desk 1/2--lap grid__cell">
           <div class="home-banner__content">
             <div class="home-banner__logo">
               {% include 'image' with img:section.settings.logo, class: 'full-width'  %}
             </div>
             <div class="home-banner__title">
               <h1 class="monserrat-bold">{{ section.settings.title}}</h1>
             </div>
             <div class="home-banner__text">{{ section.settings.text}}
             </div>
           </div>
        </div>
      </div>
      <div class="home-banner__scroll desktop-only">
        <a href="#home-text">
           <div class="relative">
             <div class="scroll__text">
               <span class="mukta">Down</span>
               {%- include 'arrow-down' -%}
             </div>
           </div>
        </a>
      </div>
    </div>
  </div>
</section>
</a>
{% schema %}
{
  "name": "Home-Banner",
  "settings": [
       {
         "type": "color",
         "id": "color",
         "label": "color",
         "default": "#e1eee7"
       },
       {
         "type": "image_picker",
         "id": "image",
         "label": "image"
       },
       {
         "type": "image_picker",
         "id": "image-mobile",
         "label": "label"
       },
       {
         "type": "image_picker",
         "id": "logo",
         "label": "logo"
       },
      {
        "type": "text",
        "id": "title",
        "label": "title",
        "default": "Nouveautes"
      },
      {
        "type": "text",
        "id": "text",
        "label": "text",
        "default": "<p>La nouvelle collection de soins naturels de beauté Alban Muller est à cueillir dès maintenant</p>"
      }
  ],
  "presets": [
      {
        "name": "Home Banner",
        "category": "Homepage"
      }
    ]
}
{% endschema %}
