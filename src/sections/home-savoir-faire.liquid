            <h2 class="savoir-faire__title">{{ section.settings.title-2}}</h2>
          </div>

         </div>
      </div>
      <div class="1/4--lap-and-up grid__cell">
        <div class="savoir-faire__block">
          <div class="savoir-faire__image">
            {% include 'image' with img:section.settings.image-3, class: 'full-width '  %}
          </div>
          <div class="savoir-faire__content">
            <h2 class="savoir-faire__title">{{ section.settings.title-3}}</h2>
          </div>

         </div>
      </div>
      <div class="1/4--lap-and-up grid__cell">
          <div class="savoir-faire__image">
            {% include 'image' with img:section.settings.image-4, class: 'full-width '  %}
          </div>
      </div>

    </div>
  </div>
</section>
