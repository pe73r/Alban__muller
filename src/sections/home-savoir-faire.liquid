<section id="section--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="savoir-faire">
  <div class="container-full">
     <div class="grid grid--flush">
       <div class="1/4--lap-and-up grid__cell">
         <div class="savoir-faire__block">
           <div class="savoir-faire__content relative">
               <h2 class="savoir-faire__title">{{ section.settings.title-1}}</h2>
           </div>
              <div class="savoir-faire__image">
                {% include 'image' with img:section.settings.image, class: 'full-width '  %}
              </div>
          </div>
      </div>
      <div class="1/4--lap-and-up grid__cell">
        <div class="savoir-faire__block">
          <div class="savoir-faire__image">
            {% include 'image' with img:section.settings.image-2, class: 'full-width '  %}
          </div>
