{% render 'home-savoir-faire' %}

{% schema %}
{
  "name": "Savoir Faire",
  "settings": [
     {
       "type": "text",
       "id": "button-link",
       "label": "Button",
       "default": "Notre Savoir faire"
     },
     {
       "type": "url",
       "id": "url",
       "label": "Button url"
     }
  ],
  "blocks": [
    {
      "type": "block-image-text",
      "name": "image and tetx",
      "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "title",
            "default": "Title"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "image_picker",
            "id": "image-mobile",
            "label": "Image mobile"
          },
          {
            "type": "checkbox",
            "id": "only-image",
            "label": "Only image",
            "default": false,
            "info": "Display only image without text"
          },
          {
            "type": "checkbox",
            "id": "reverse",
            "label": "Reverse column",
            "default": false
          },
          {
            "type": "url",
            "id": "link",
            "label": "link in image"
          }

      ]
    }
  ],
  "presets": [
      {
        "name": "Home Savoir Faire",
        "category": "Homepage"
      }
    ]
}
{% endschema %}
